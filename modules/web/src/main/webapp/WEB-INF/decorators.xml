<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
    <excludes>
        <pattern>/resources/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/META-INF/*</pattern>
    </excludes>

    <decorator name="adminLayout" page="login-layout.jsp">
        <pattern>*/signIn</pattern>
    </decorator>

    <decorator name="signUpLayout" page="signup-layout.jsp">
        <pattern>*/signUp</pattern>
    </decorator>

    <decorator name="indexLayout" page="dash-layout.jsp">
        <pattern>*/index</pattern>
        <pattern>*/main</pattern>
        <pattern>/*</pattern>
    </decorator>

</decorators>

